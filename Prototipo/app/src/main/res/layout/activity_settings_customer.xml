<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Client.SettingsCustomer"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_settings_customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text"
        android:theme="@style/ToolbarTheme_inverted"
        app:layout_constraintBottom_toTopOf="@id/settings_customer_scrollview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/impostazioni"
        app:titleTextAppearance="@style/Style_TextView"
        app:titleTextColor="@color/back" />


    <ScrollView
        android:id="@+id/settings_customer_scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:onClick="hideKeyboard"
        android:background="@color/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_settings_customer"
        app:layout_constraintVertical_bias="0.0">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listview_settings_personal_info"
            android:padding="10dp"/>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>