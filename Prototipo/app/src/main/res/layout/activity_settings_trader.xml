<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Trader.SettingsTrader"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_settings_trader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Impostazioni"
        app:titleTextAppearance="@style/Style_TextView"
        app:titleTextColor="@color/back"
        android:background="@color/text"
        android:theme="@style/ToolbarTheme"/>

    <ScrollView
        android:id="@+id/settings_trader_scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:onClick="hideKeyboard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_settings_trader"
        app:layout_constraintVertical_bias="0.0">



    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>