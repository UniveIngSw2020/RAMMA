<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RentScio1" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/text</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/comfortaa_regular</item>
        <item name="android:textColor">@color/back</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="Style_TextView">
        <item name="fontFamily">@font/comfortaa_regular</item>
        <item name="android:textColor">@color/back</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/text</item>
        <item name="fontFamily">@font/comfortaa_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:visibility">visible</item>
    </style>
    <style name="ToolbarTheme_inverted" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/back</item>
        <item name="android:textColor">@color/back</item>
        <item name="fontFamily">@font/comfortaa_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@color/text</item>
        <item name="android:colorControlNormal"> @color/text </item>
    </style>

    <style name="TabLayoutAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">25sp</item>
        <item name="fontFamily">@font/comfortaa_regular</item>
        <item name="android:textColor">@color/text</item>
    </style>


    <style name="PreferencesTheme">
        <item name="android:background">@color/back</item>
    </style>
</resources>